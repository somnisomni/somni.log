{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": true,
      "previewPath": null,
      "fields": [
        {
          "title": "제목",
          "name": "title",
          "type": "string"
        },
        {
          "title": "설명",
          "name": "description",
          "type": "string",
          "required": false
        },
        {
          "title": "URL 경로 (Slug)",
          "name": "slug",
          "type": "string",
          "default": "{{title}}"
        },
        {
          "title": "게시 일자",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "헤더(미리보기) 이미지",
          "name": "cover",
          "type": "fields",
          "required": false,
          "fields": [
            {
              "title": "이미지",
              "name": "image",
              "type": "image"
            },
            {
              "title": "상대 경로 사용",
              "name": "relative",
              "type": "boolean",
              "default": true,
              "hidden": true
            }
          ]
        },
        {
          "title": "초안 여부",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "태그",
          "name": "tags",
          "type": "tags"
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/content/posts"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.content.publicFolder": "static",
  "frontMatter.framework.id": "hugo",
  "frontMatter.preview.host": "http://localhost:1313/posts",
  "frontMatter.content.snippets": {
    "Image Figure": {
      "description": "Insert an image as figure shortcode",
      "body": "{{< figure src=\"[[&filename]]\" attr=\"[[caption]]\" >}}",
      "isMediaSnippet": true
    }
  },
  "frontMatter.content.supportedFileTypes": [ "md", "mdx", "markdown" ]
}
