{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": true,
      "previewPath": null,
      "fields": [
        {
          "title": "제목",
          "name": "title",
          "type": "string"
        },
        {
          "title": "설명",
          "name": "description",
          "type": "string"
        },
        {
          "title": "URL 경로 (Slug)",
          "name": "slug",
          "type": "string",
          "default": "{{title}}"
        },
        {
          "title": "게시 일자",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "내용 미리보기",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "초안 여부",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "태그",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "카테고리",
          "name": "categories",
          "type": "categories"
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/content/posts"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.website.host": "https://log.somni.one"
}
